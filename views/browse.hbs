<div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
  <h1 class='text-3xl font-bold leading-tight text-gray-900'>Browse Films</h1>

  <div class='mt-6'>
    <input
      type='text'
      placeholder='Search for films...'
      class='w-full p-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm'
    />
  </div>

  <div class='mt-6 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3'>
    {{#each films}}
      <div class='bg-white p-6 rounded-lg shadow-lg'>
        <img
          src='{{this.coverImageUrl}}'
          alt='Film cover'
          class='w-full h-40 object-cover rounded-md'
        />
        <div class='mt-4'>
          <h3 class='text-lg font-bold'>{{this.title}}</h3>
          <p class='mt-2 text-sm text-gray-600'>Director: {{this.director}}</p>
          <p class='mt-2 text-sm text-gray-600'>Release Year:
            {{this.releaseYear}}</p>
          <p class='mt-2 text-sm text-gray-600'>Genre: {{this.genre}}</p>
          <div class='mt-4 flex justify-between items-center'>
            <span class='text-xl font-bold text-gray-900'>${{this.price}}</span>
            <a
              href='/films/{{this.id}}'
              class='text-blue-500 hover:underline'
            >Details</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Pagination Controls -->
  <div class='mt-6 flex justify-center'>
    {{#if hasPrev}}
      <a
        href='?page={{prevPage}}'
        class='px-3 py-1 bg-white border rounded-md shadow-sm text-gray-700 hover:bg-gray-50'
      >Previous</a>
    {{/if}}
    {{#if hasNext}}
      <a
        href='?page={{nextPage}}'
        class='ml-2 px-3 py-1 bg-white border rounded-md shadow-sm text-gray-700 hover:bg-gray-50'
      >Next</a>
    {{/if}}
  </div>
</div>