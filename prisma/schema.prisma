datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  username    String   @unique
  firstName   String
  lastName    String
  password    String
  balance     Int      @default(0)
  purchases   Purchase[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Film {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  director    String
  releaseYear Int
  genre       String[]
  price       Int
  duration    Int
  videoUrl    String
  coverImageUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Purchase Purchase[]
}

model Purchase {
  id          Int      @id @default(autoincrement())
  userId      Int
  filmId      Int
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  film        Film     @relation(fields: [filmId], references: [id])

  @@unique([userId, filmId])  
}

model Admin {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  createdAt   DateTime @default(now())
}
