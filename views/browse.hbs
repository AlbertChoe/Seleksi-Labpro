<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Browse Films</title>
    <link
      href='https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css'
      rel='stylesheet'
    />
  </head>
  <body>
    <div class='min-h-screen bg-gray-100'>
      <nav class='bg-white shadow-lg'>
        <div class='max-w-7xl mx-auto px-4'>
          <div class='flex justify-between h-16'>
            <div class='flex'>
              <div class='flex-shrink-0 flex items-center'>
                <a href='#' class='text-xl font-bold'>FilmDB</a>
              </div>
            </div>
            <div class='flex items-center'>
              <a
                href='/login'
                class='text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium'
              >Login</a>
            </div>
          </div>
        </div>
      </nav>

      <main class='py-10'>
        <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
          <h1 class='text-3xl font-bold leading-tight text-gray-900'>Browse
            Films</h1>

          <div class='mt-6'>
            <input
              type='text'
              placeholder='Search for films...'
              class='w-full p-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm'
            />
          </div>

          <div
            class='mt-6 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3'
          >
            <!-- Sample Film Card -->
            <div class='bg-white p-6 rounded-lg shadow-lg'>
              <img
                src='https://via.placeholder.com/150'
                alt='Film cover'
                class='w-full h-40 object-cover rounded-md'
              />
              <div class='mt-4'>
                <h3 class='text-lg font-bold'>Film Title</h3>
                <p class='mt-2 text-sm text-gray-600'>Director: Sample Director</p>
                <p class='mt-2 text-sm text-gray-600'>Release Year: 2024</p>
                <p class='mt-2 text-sm text-gray-600'>Genre: Drama</p>
                <div class='mt-4 flex justify-between items-center'>
                  <span class='text-xl font-bold text-gray-900'>$10.00</span>
                  <a href='#' class='text-blue-500 hover:underline'>Details</a>
                </div>
              </div>
            </div>

            <!-- Add more sample film cards as needed -->
          </div>

          <!-- Pagination Controls -->
          <div class='mt-6 flex justify-center'>
            <a
              href='#'
              class='px-3 py-1 bg-white border rounded-md shadow-sm text-gray-700 hover:bg-gray-50'
            >Previous</a>
            <a
              href='#'
              class='ml-2 px-3 py-1 bg-white border rounded-md shadow-sm text-gray-700 hover:bg-gray-50'
            >Next</a>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>