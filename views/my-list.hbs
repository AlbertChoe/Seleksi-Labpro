{{! Do not use #extend and #content }}
{{! Use the default layout and include the partial within the layout body }}
<div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
  <h1 class='text-3xl font-bold mb-4'>My List</h1>

  <div class='mt-6 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3'>
    {{#each purchases}}
      <div class='bg-white p-6 rounded-lg shadow-lg'>
        <img
          src='{{this.film.coverImageUrl}}'
          alt='Film cover'
          class='w-full h-40 object-cover rounded-md'
        />
        <div class='mt-4'>
          <h3 class='text-lg font-bold'>{{this.film.title}}</h3>
          <p class='mt-2 text-sm text-gray-600'>Director:
            {{this.film.director}}</p>
          <p class='mt-2 text-sm text-gray-600'>Release Year:
            {{this.film.releaseYear}}</p>
          <p class='mt-2 text-sm text-gray-600'>Genre: {{this.film.genre}}</p>
          <div class='mt-4 flex justify-between items-center'>
            <span
              class='text-xl font-bold text-gray-900'
            >${{this.film.price}}</span>
            <a
              href='/films/{{this.film.id}}'
              class='text-blue-500 hover:underline'
            >Details</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Pagination Controls -->
  <div class='mt-6 flex justify-center'>
    {{#if hasPrev}}
      <a
        href='?page={{prevPage}}'
        class='px-3 py-1 bg-white border rounded-md shadow-sm text-gray-700 hover:bg-gray-50'
      >Previous</a>
    {{/if}}
    {{#if hasNext}}
      <a
        href='?page={{nextPage}}'
        class='ml-2 px-3 py-1 bg-white border rounded-md shadow-sm text-gray-700 hover:bg-gray-50'
      >Next</a>
    {{/if}}
  </div>
</div>