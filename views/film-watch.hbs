<div class='max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8'>
  <!-- Back Button -->
  <button
    onclick='history.back()'
    class='mb-4 inline-flex items-center px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-md hover:bg-blue-700'
  >
    ‚Üê Back
  </button>

  <div class='bg-black rounded-lg shadow-lg overflow-hidden relative'>
    <div class='relative' style='padding-bottom: 56.25%;'>
      <!-- Aspect ratio 16:9 -->
      <video
        id='video-player'
        class='absolute inset-0 w-full h-full object-cover'
        controls
      >
        <source src='{{film.video_url}}' type='video/mp4' />
        Your browser does not support the video tag.
      </video>
    </div>
  </div>

  <!-- Film Details Section -->
  <div class='mt-8 bg-white p-6 rounded-lg shadow-lg'>
    <h1 class='text-3xl font-bold text-gray-900'>{{film.title}}</h1>
    <p class='mt-4 text-gray-700 leading-relaxed'>{{film.description}}</p>

    <div class='mt-4 grid grid-cols-2 gap-4'>
      <div>
        <p class='text-gray-600'><strong>Director:</strong>
          {{film.director}}</p>
        <p class='text-gray-600'><strong>Release Year:</strong>
          {{film.release_year}}</p>
      </div>
      <div>
        <p class='text-gray-600'><strong>Genre:</strong> {{film.genre}}</p>
        <p class='text-gray-600'><strong>Duration:</strong>
          {{film.duration}}
          minutes</p>
      </div>
    </div>
  </div>
</div>